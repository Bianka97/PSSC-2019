        </div>

        <div class="form-group row">
            <label asp-for="Inspectie_Toracica" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Inspectie_Toracica" class="form-control" />
            </div>
        </div>

        <h1>Analiza de Sange</h1>

        <div class="form-group row">
            <label asp-for="Leucocite" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Leucocite" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Eritrocite" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Eritrocite" class="form-control" />
