        </div>

        <div class="form-group row">
            <label asp-for="CNP" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CNP" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Sexul" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Sexul" asp-items="Html.GetEnumSelectList<Sex>()" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Adresa" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Adresa" class="form-control" />
            </div>
        </div>

        <h1>Curbe Individuale</h1>

        <div class="form-group row">
            <label asp-for="Inaltime" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Inaltime" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Greutate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Greutate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Temperatura" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Temperatura" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Puls" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Puls" class="form-control" />
            </div>
        </div>

        <h1>Examen Cardiac</h1>

        <div class="form-group row">
            <label asp-for="Tensiune" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
