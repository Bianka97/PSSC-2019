@model Proiect_PSSC.ViewModels.PacientiEditViewModel

@{
    ViewBag.Title = "Edit Pacient";
    var id = Model.Id;
}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Update" method="post">

        <input hidden asp-for="Id" />
        <h1>Date Generale</h1>

        <div class="form-group row">
            <label asp-for="Nume" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nume" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Prenume" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Prenume" class="form-control" />
