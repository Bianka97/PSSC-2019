@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Web.Models.AppointmentDto  
@{  
    ViewBag.Title = "www.compilemode.com";  
} 
<!DOCTYPE html>
<html>
<body>
    <fieldset>
        <div>
        <legend>Enter your dates to make the appoinment:</legend>
        </div>
    </fieldset>
    @using (Html.BeginForm("MadeAppointment", "Appointment", FormMethod.Post)) 
    {  
        @Html.AntiForgeryToken()  
        
        <div class="form-horizontal" align="left">  
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
                <div class="editor-label">
                    @Html.LabelFor(u => u.PatientName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.PatientName)
                    @Html.ValidationMessageFor(u => u.PatientName)
                </div> 
                 <div class="editor-label">
                    @Html.LabelFor(u => u.MedName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.MedName)
                    @Html.ValidationMessageFor(u => u.MedName)
                </div>
                 <div class="editor-label">
                    @Html.LabelFor(u => u.BreedPet)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.BreedPet)
                    @Html.ValidationMessageFor(u => u.BreedPet)
                </div> 
                 <div class="editor-label">
                    @Html.LabelFor(u => u.Symptoms)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.Symptoms)
                    @Html.ValidationMessageFor(u => u.Symptoms)
                </div> 
                <div class="editor-label">
                    @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-2" })  
                 </div> 
                <div class="editor-field">
                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })  
                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })  
                </div> 
                <p></p>
                <button name="submit">Send appointment</button>
        </div> 
    }
</body>
</html>
