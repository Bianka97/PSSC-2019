@model List<Web.Models.DDD.Appointment>
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_LayoutMedic.cshtml";
}
<!DOCTYPE html>
<html>
<head>
<style>
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 16px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
  cursor: pointer;
}

table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 15px;
}
</style>
</head>
<body>
<div>
    <fieldset>
        <legend>My Appointments</legend>
        <p></p>
    </fieldset>
        <table style="width:50%">
            <tr>
            <th>Patient</th><th>Date</th><th>Breed Pet</th><th>Symptoms</th><th>Status</th></tr>
            @using (Html.BeginForm("ChangeStatusForAppointment", "Appointment", FormMethod.Post))
            { 
              @foreach(var item in Model)
                {
                <tr>
                   <td>@item.PartitionKey</td>
                   <td>@item.DOB</td> 
                   <td>@item.RowKey</td>
                   <td>@item.Symptoms</td>
                   <td>
                   <button class="button button2" type="submit" name="Id" value=@item.Id>@item.Status</button> 
                   </td>
                </tr>
                }
            }
        </table>
     </fieldset>
</div>
</body>
</html> 