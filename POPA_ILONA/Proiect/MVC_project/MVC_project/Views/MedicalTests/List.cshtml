@model IEnumerable<MVC_project.Models.MedicalTests>

@{
    ViewData["Title"] = "List";
}

<h1>List of blood test results</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestedComponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalValues)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultedValues)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestedComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalValues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultedValues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
             
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr> 
}
    </tbody>
</table>
