@model MedFind.Models.Medic

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutMedic";
}

<h1>Details</h1>

<div>
    <h4>Medic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd>
            <p>Students: </p>
        </dd>
            <table>
                <tr>
                    <td class="col-sm-2">
                        <p>Name</p>
                    </td>
                    <td class="col-sm-2">
                        <p>Student ID</p>
                    </td>
                   
                </tr>
                @if (Model.List() != null)
                {
                    foreach (Student item2 in Model.List())
                    {
                        <tr>
                            <td >
                                @Html.DisplayFor(modelItem => item2.Name)
                            </td>
                            <td >
                                @Html.DisplayFor(modelItem => item2.StudentID)
                            </td>
                        </tr>
                    }
                }

            </table>
        
    </dl>

</div>
<div>
    
    
</div>
