@model Project.ViewModels.PhoneEditViewModel

@{
    ViewBag.Title = "Edit Phone";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "image1.jpg");
    var id = Model.Id;
}
    <form enctype="multipart/form-data" asp-controller="home" asp-action="update" method="post" class="mt-3">
        <div class="form-group row">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistingPhotoPath" />

            <label asp-for="Name" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="form-control" placeholder="Color" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <input asp-for="Type" class="form-control" placeholder="Type" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Dimension" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <input asp-for="Dimension" class="form-control" placeholder="Dimension" />
                <span asp-validation-for="Dimension" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" placeholder="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label "></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click here to change photo</label>
                </div>
            </div>
        </div>

        <div class="form-group row col-sm-4 offset-4">
            <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <!--  <a asp-controller="Home" asp-action="Update"
            button type="submit" class="btn btn-primary">Update</a>-->
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="home" asp-action="index"
                   class="btn btn-primary">Cancel</a>
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>